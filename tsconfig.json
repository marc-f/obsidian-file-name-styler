{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["obsidian", "node"],
    "lib": ["ES2018", "DOM"],
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "include": ["**/*.ts"]
}
